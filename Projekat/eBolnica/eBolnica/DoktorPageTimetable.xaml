    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot x:Name="rootPivot" Title="Timetable">
            <PivotItem Header="Today">
                <StackPanel Orientation="Vertical" >
                    <StackPanel x:Name="contentWrapper" Orientation="Horizontal">
                        <StackPanel x:Name="doelenContentPanel" Orientation="Vertical" MinWidth="400">
                            <StackPanel x:Name="panel" Orientation="Horizontal" >
                                <TextBlock x:Name="search" TextWrapping="Wrap" Text="Search:     " Margin="5,5,5,5"/>
                                <TextBox x:Name="textboxt" TextWrapping="Wrap" Text="" HorizontalAlignment="Stretch" Width="150" Margin="5,5,5,5"/>
                            </StackPanel>
                            <StackPanel x:Name="panell" >
                                <ListView Height="100"
          ScrollViewer.HorizontalScrollMode="Enabled" 
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          ScrollViewer.VerticalScrollMode="Disabled"
          ScrollViewer.VerticalScrollBarVisibility="Hidden">
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <ItemsWrapGrid/>
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>
                                    <x:String>Item 1</x:String>
                                    <x:String>Item 2</x:String>
                                    <x:String>Item 3</x:String>
                                    <x:String>Item 4</x:String>
                                    <x:String>Item 5</x:String>
                                </ListView>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel x:Name="secondPanel" Orientation="Vertical" HorizontalAlignment="Right" >
                            <CalendarView />
                            <CalendarDatePicker x:Name="arrivalCalendarDatePicker" Header="Arrival date"/>

                        </StackPanel>
                    </StackPanel>
                    <ScrollViewer >
                        <TextBox HorizontalAlignment="Stretch" Height="150" Header="Details"/>
                    </ScrollViewer>
                    <StackPanel Orientation="Horizontal" >
                        <Button Name="confirm" Content="Confirm" Margin="5,5,5,5"/>
                        <Button Name="cancel" Content="Cancel" Margin="5,5,5,5"/>

                    </StackPanel>

                </StackPanel>

            </PivotItem>
